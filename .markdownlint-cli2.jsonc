{
  // Configuration for markdownlint-cli2
  "config": {
    // Disable MD013/line-length as markdown docs often have long lines with URLs
    "MD013": false,
    // Allow duplicate headings in different sections (common in API docs)
    "MD024": {
      "siblings_only": true
    },
    // Disable table column style checks to allow compact tables
    "MD060": false
  },
  // Ignore agent configuration files
  "ignores": [
    ".github/copilot-instructions.md",
    "CHANGELOG.md"
  ]
}
