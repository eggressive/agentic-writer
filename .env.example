# OpenAI API Key for LangChain
OPENAI_API_KEY=your_openai_api_key_here

# Medium API Token (optional, for publishing to Medium)
MEDIUM_ACCESS_TOKEN=your_medium_token_here

# Unsplash API Key (optional, for image search)
UNSPLASH_ACCESS_KEY=your_unsplash_key_here

# Unsplash search configuration (optional)
# Note: Color filtering is available programmatically via the search_unsplash method
# Number of images to fetch per search query (max: 30, default: 10)
UNSPLASH_PER_PAGE=10
# Sort order: "relevant" (default) or "latest"
UNSPLASH_ORDER_BY=relevant
# Content filter: "low" or "high" (default: "high" for appropriate content)
UNSPLASH_CONTENT_FILTER=high
# Image orientation: "landscape" (default), "portrait", or "squarish"
UNSPLASH_ORIENTATION=landscape

# Model configuration
OPENAI_MODEL=gpt-4-turbo-preview
TEMPERATURE=0.7

# Logging
LOG_LEVEL=INFO
